<% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "error") %> impide guardar este usuario:</h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-grid">
  <div class="field mb-3">
    <%= f.label :name, "Nombre Completo" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="field mb-3">
    <%= f.label :surname, "Apodo" %>
    <%= f.text_field :surname, class: "form-control", required: true %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="field mb-3">
    <%= f.label :address, "DirecciÃ³n" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <% unless @user == current_user %>
    <div class="field mb-3">
      <%= f.label :role, "Rol" %>
      <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: "form-select" %>
    </div>
  <% end %>
  

</div>