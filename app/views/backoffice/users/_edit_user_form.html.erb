<div class="form-grid">
  <div class="form-field">
    <%= f.label :name, "Nombre", class: "required" %>
    <%= f.text_field :name, class: "input", required: true %>
  </div>

  <div class="form-field">
    <%= f.label :surname, "Apellido", class: "required" %>
    <%= f.text_field :surname, class: "input", required: true %>
  </div>

  <div class="form-field">
    <%= f.label :email, "Email", class: "required" %>
    <%= f.email_field :email, class: "input", required: true %>
  </div>

