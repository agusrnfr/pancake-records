<% content_for :styles do %>
  <%= stylesheet_link_tag "storefront"%>
<% end %>
<div class="auth-page auth-password-reset">
  <div class="auth-card">
    <div class="auth-card-header">
      <div class="auth-icon">
        <i class="fa-solid fa-lock-open"></i>
      </div>
      <h2 class="auth-title">Cambia tu contraseña</h2>
    </div>
    <div class="auth-card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="auth-field">
          <%= f.label :password, "Nueva contraseña" %>
          <% if @minimum_password_length %>
            <small>(<%= @minimum_password_length %> caracteres mínimos)</small>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div>
        <div class="auth-field">
          <%= f.label :password_confirmation, "Confirmar nueva contraseña" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Cambiar contraseña", class:"auth-submit" %>
        </div>
      <% end %>
      <div class="auth-card-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>